  "dependencies": {
    "mithril": "^1.1.1"
  },
  "scripts": {
    "ui-server": "./node_modules/http-server/bin/http-server public -p 3000 -s",
    "ui-clean-public": "node ./node_modules/del/index.js public",
    "ui-copy-static-files-watch": "cpx \"src/ui/**/*.{html,css,json,svg,png,jpg,gif,woff,eot,ttf}\" public --watch --clean",
    "ui-build-js-watch": "watchify src/ui/index.js --debug --verbose -o public/main.js",
    "dev": "npm run ui-clean-public & npm run ui-copy-static-files-watch & npm run ui-build-js-watch & npm run ui-server",
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "browserify": "^14.3.0",
    "cpx": "^1.5.0",
    "del-cli": "^0.2.1",
    "eslint": "^3.19.0",
    "firebase-tools": "^3.6.1",
    "http-server": "^0.9.0",
    "watchify": "^3.9.0"
  }
}
